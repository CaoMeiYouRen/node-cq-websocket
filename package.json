{
  "name": "cq-websocket",
  "version": "2.0.0",
  "description": "A Node SDK for developing QQ chatbots based on WebSocket, which is depending on CoolQ and CQHTTP API plugin. ",
  "main": "lib/index",
  "engines": {
    "cqhttp": ">=4.6.0",
    "node": ">=8"
  },
  "files": [
    "lib",
    "dist/**/*.min.js"
  ],
  "scripts": {
    "build": "npm run build:tsc && npm run build:webpack",
    "build:webpack": "webpack --config webpack.config.js",
    "build:tsc": "tsc",
    "clean": "rimraf \"lib/**/*.d.ts\" \"lib/**/!(*.spec).js\" \".dev\"",
    "commit": "git-cz",
    "lint": "eslint --ext .ts lib",
    "test": "ava --config ava.config.js",
    "test:ci": "nyc ava --config ava-ci.config.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/momocow/node-cq-websocket.git"
  },
  "keywords": [
    "coolq",
    "cqhttp",
    "coolq-http-api",
    "websocket"
  ],
  "author": "MomoCow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/momocow/node-cq-websocket/issues"
  },
  "homepage": "https://github.com/momocow/node-cq-websocket#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/websocket": "^0.0.40",
    "websocket": "^1.0.30"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.5.4",
    "@semantic-release/npm": "^5.2.0",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.4.0",
    "ava": "^2.4.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-standard-with-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^8.1.0",
    "is-ci": "^2.0.0",
    "kaomojify-webpack-plugin": "^0.1.1",
    "nyc": "^14.1.1",
    "rimraf": "^2.7.1",
    "semantic-release": "^15.13.27",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
