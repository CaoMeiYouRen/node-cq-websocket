{
  "name": "cq-websocket",
  "version": "2.0.0",
  "description": "A Node SDK for developing QQ chatbots based on WebSocket, which is depending on CoolQ and CQHTTP API plugin. ",
  "main": "src/index",
  "engines": {
    "cqhttp": ">=4.6.0",
    "node": ">=8"
  },
  "files": [
    "src",
    "dist/**/*.min.js"
  ],
  "scripts": {
    "build": "npm run build:tsc && npm run build:webpack",
    "build:webpack": "webpack --config webpack.config.js",
    "build:tsc": "tsc",
    "clean": "rimraf \"src/**/*.d.ts\" \"src/**/!(*.spec).js\" \".dev\"",
    "commit": "git-cz",
    "lint": "eslint --ext .ts src",
    "test": "ava --config ava.config.js",
    "test:ci": "nyc ava --config ava-ci.config.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/momocow/node-cq-websocket.git"
  },
  "keywords": [
    "coolq",
    "cqhttp",
    "coolq-http-api",
    "websocket"
  ],
  "author": "MomoCow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/momocow/node-cq-websocket/issues"
  },
  "homepage": "https://github.com/momocow/node-cq-websocket#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/websocket": "^0.0.40",
    "debug": "^4.1.1",
    "nanoid": "^2.1.2",
    "p-timeout": "^3.2.0",
    "websocket": "^1.0.29"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.2.1",
    "@types/debug": "^4.1.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/nanoid": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "ava": "^2.2.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.5",
    "eslint": "^6.1.0",
    "eslint-config-standard-with-typescript": "^7.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "fs-extra": "^8.1.0",
    "is-ci": "^2.0.0",
    "kaomojify-webpack-plugin": "^0.1.1",
    "lodash": "^4.17.15",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.19",
    "sinon": "^7.4.2",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6"
  }
}
