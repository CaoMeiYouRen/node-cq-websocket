{
  "extends": "standard-with-typescript",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/explicit-function-return-type": [
      "error", { "allowExpressions": true }
    ],
    "@typescript-eslint/promise-function-async": [
      "error", { "allowAny": true }
    ]
  }
}